<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Marks"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#301E8A"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Exam Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#301E8A" />
        <Spinner
            android:id="@+id/spinner_exam_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="16dp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/marks_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*"
                android:background="@android:drawable/dialog_holo_light_frame">
                <TableRow
                    android:background="#301E8A"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="Student Name"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="8dp" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Assignment"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="8dp" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Quiz"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="8dp" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Midterm"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="8dp" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Final"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:padding="8dp" />
                </TableRow>
                <TableRow android:background="#F5F5F5" android:gravity="center_vertical">
                    <TextView android:layout_width="160dp" android:layout_height="48dp" android:text="Denarya Maryam" android:padding="8dp" android:maxLines="1" android:ellipsize="end" />
                    <EditText android:id="@+id/denarya_assignment" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/denarya_quiz" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/denarya_midterm" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-50" />
                    <EditText android:id="@+id/denarya_final" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-100" />
                </TableRow>
                <TableRow android:background="#FFFFFF" android:gravity="center_vertical">
                    <TextView android:layout_width="160dp" android:layout_height="48dp" android:text="Hafsa Khalid" android:padding="8dp" android:maxLines="1" android:ellipsize="end" />
                    <EditText android:id="@+id/hafsa_assignment" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/hafsa_quiz" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/hafsa_midterm" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-50" />
                    <EditText android:id="@+id/hafsa_final" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-100" />
                </TableRow>
                <TableRow android:background="#F5F5F5" android:gravity="center_vertical">
                    <TextView android:layout_width="160dp" android:layout_height="48dp" android:text="Huda Rasheed" android:padding="8dp" android:maxLines="1" android:ellipsize="end" />
                    <EditText android:id="@+id/huda_assignment" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/huda_quiz" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/huda_midterm" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-50" />
                    <EditText android:id="@+id/huda_final" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-100" />
                </TableRow>
                <TableRow android:background="#FFFFFF" android:gravity="center_vertical">
                    <TextView android:layout_width="160dp" android:layout_height="48dp" android:text="Maria Anwar" android:padding="8dp" android:maxLines="1" android:ellipsize="end" />
                    <EditText android:id="@+id/maria_assignment" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/maria_quiz" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/maria_midterm" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-50" />
                    <EditText android:id="@+id/maria_final" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-100" />
                </TableRow>
                <TableRow android:background="#F5F5F5" android:gravity="center_vertical">
                    <TextView android:layout_width="160dp" android:layout_height="48dp" android:text="Mehwish Mushtaq" android:padding="8dp" android:maxLines="1" android:ellipsize="end" />
                    <EditText android:id="@+id/mehwish_assignment" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/mehwish_quiz" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/mehwish_midterm" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-50" />
                    <EditText android:id="@+id/mehwish_final" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-100" />
                </TableRow>
                <TableRow android:background="#FFFFFF" android:gravity="center_vertical">
                    <TextView android:layout_width="160dp" android:layout_height="48dp" android:text="Saba Ahmad" android:padding="8dp" android:maxLines="1" android:ellipsize="end" />
                    <EditText android:id="@+id/saba_assignment" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/saba_quiz" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/saba_midterm" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-50" />
                    <EditText android:id="@+id/saba_final" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-100" />
                </TableRow>
                <TableRow android:background="#F5F5F5" android:gravity="center_vertical">
                    <TextView android:layout_width="160dp" android:layout_height="48dp" android:text="Sehrish Shafiq" android:padding="8dp" android:maxLines="1" android:ellipsize="end" />
                    <EditText android:id="@+id/sehrish_assignment" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/sehrish_quiz" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-10" />
                    <EditText android:id="@+id/sehrish_midterm" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-50" />
                    <EditText android:id="@+id/sehrish_final" android:layout_width="80dp" android:layout_height="48dp" android:inputType="numberDecimal" android:hint="0-100" />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
        <Button
            android:id="@+id/btn_save_marks"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Marks"
            android:textColor="#FFFFFF"
            android:backgroundTint="#301E8A"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
