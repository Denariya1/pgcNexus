<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Page Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Marks"
            android:textSize="24sp"
            android:background="#301E8A"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Student Name -->
        <EditText
            android:id="@+id/et_student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Student Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <!-- Roll Number -->
        <EditText
            android:id="@+id/et_roll_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Roll Number"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Assignment Marks -->
        <EditText
            android:id="@+id/et_assignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Assignment Marks"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- Quiz Marks -->
        <EditText
            android:id="@+id/et_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Quiz Marks"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- Midterm Marks -->
        <EditText
            android:id="@+id/et_midterm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Midterm Marks"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- Final Marks -->
        <EditText
            android:id="@+id/et_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="Final Marks"
            android:inputType="number"
            android:layout_marginBottom="20dp" />

        <!-- Upload Button -->
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Upload Marks"
            android:backgroundTint="#301E8A"
            android:textColor="#FFFFFF"
            android:padding="10dp" />

    </LinearLayout>
</ScrollView>
