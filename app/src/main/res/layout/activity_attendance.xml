<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#301E8A">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Attendance Sheet"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <Spinner
        android:id="@+id/spinnerClassSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:spinnerMode="dropdown"
        android:background="@android:drawable/btn_dropdown"
        android:text="Select Class" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:text="Student Name"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Attendance"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Student Rows -->
            <!-- Repeat this block for each student -->
            <!-- 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Ali Raza" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ali_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/ali_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Fatima Khan" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/fatima_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/fatima_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Zain Malik" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/zain_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/zain_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hassan Javed" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/hassan_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/hassan_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Ayesha Siddiqui" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ayesha_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/ayesha_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Sara Ahmed" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/sara_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/sara_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 7 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Bilal Asif" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/bilal_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/bilal_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 8 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Mehwish Noor" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mehwish_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/mehwish_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 9 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hamza Tariq" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/hamza_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/hamza_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

            <!-- 10 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Sana Yousaf" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/sana_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present" />

                    <RadioButton
                        android:id="@+id/sana_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSubmitAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Attendance"
        android:background="#301E8A"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="8dp" />
</LinearLayout>

