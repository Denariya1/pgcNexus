<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Marksheet"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#301E8A"
            android:padding="14dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp" />

        <!-- Program Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Program:"
            android:textStyle="bold"
            android:textColor="#301E8A"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinner_program"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="16dp" />

        <!-- Student Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Student:"
            android:textStyle="bold"
            android:textColor="#301E8A"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinner_student"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="16dp" />

        <!-- Quiz Marks -->
        <EditText
            android:id="@+id/et_quiz"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Quiz Marks"
            android:inputType="number"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Midterm Marks -->
        <EditText
            android:id="@+id/et_mid"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Midterm Marks"
            android:inputType="number"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Final Exam Marks -->
        <EditText
            android:id="@+id/et_final"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Final Marks"
            android:inputType="number"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- GPA -->
        <EditText
            android:id="@+id/et_gpa"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="GPA"
            android:inputType="numberDecimal"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- CGPA -->
        <EditText
            android:id="@+id/et_cgpa"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="CGPA"
            android:inputType="numberDecimal"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit_marks"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit Marks"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:backgroundTint="#301E8A"
            android:elevation="3dp" />
    </LinearLayout>
</ScrollView>
