<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"> <LinearLayout
    android:id="@+id/headerLayout" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical" android:background="#301E8A"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    android:contentDescription="Attendance report header">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/back"
        android:contentDescription="Back"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:importantForAccessibility="yes"
        android:text="Attendance Report"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />
</LinearLayout>

    <Spinner
        android:id="@+id/programSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:contentDescription="Select program"
        android:accessibilityLiveRegion="polite"
        android:importantForAccessibility="yes"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:contentDescription="Students list"
        android:importantForAccessibility="yes"
        android:paddingStart="16dp" android:paddingEnd="16dp"
        android:paddingBottom="16dp"> <LinearLayout
        android:id="@+id/cardsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:importantForAccessibility="yes"/>
    </ScrollView>
</LinearLayout>